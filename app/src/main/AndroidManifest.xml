<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamepuzzle">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GamePuzzle">
        <activity android:name=".puzzle.GameActivity"/>
        <activity android:name=".puzzle.AboutActivity"/>
        <activity android:name=".puzzle.BeshActivity"/>
        <activity android:name=".puzzle.TurtActivity"/>
        <activity android:name=".puzzle.UchActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>